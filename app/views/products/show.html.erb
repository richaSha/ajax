<div class="image-wrapper">
    <%= image_tag @product.image.url(:medium), class: "responsive-img" %>
  </div>
  <div class="product-info">
    <h1><%= @product.name %></h1>
    <p><%= @product.description %></p>
    <p><%= number_to_currency @product.price %></p>

    <%= form_for @order_item, remote: true do |f| %>
      <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.number_field :quantity, value: 1, class: 'quantity-input' %>
        <%= f.submit "Add to cart", class: "btn btn-success", id: "add_to_cart" %>
    <% end %>

    <% if current_user && current_user.admin? %>

      <div class="section">
        <%= link_to "Edit", edit_product_path(@product), id: "product-edit" %> |
        <%= link_to "Delete", product_path(@product), data: {
                  confirm: "Are you sure you want to delete this product?",
                  method: "delete"
                  } %>
      </div>
    <% end %>
  </div>
